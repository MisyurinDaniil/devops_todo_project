{
  "uid": "todo-core-" ,
  "title": "TODO â€¢ Core Availability Dashboard",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["todo", "core", "availability"],
  "timezone": "browser",
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Backend replicas up (total)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "count(up{job='django'} == 1)",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Backend instances status",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{job='django'}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Postgres availability",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(up{job='postgres'})",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Backend Nginx availability",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(up{job='nginx'})",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 5,
      "type": "graph",
      "title": "Nginx active connections",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "nginx_connections_active",
          "legendFormat": "active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "type": "graph",
      "title": "Postgres open connections",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(pg_stat_database_numbackends)",
          "legendFormat": "connections",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Nginx exporter up",
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{job='nginx'}",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Postgres exporter up",
      "gridPos": { "x": 6, "y": 12, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "up{job='postgres'}",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Backend instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up{job='django'}, instance)",
        "refresh": 1,
        "includeAll": true
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" }
}
